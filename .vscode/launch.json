    "version": "0.2.0",
  
   
  "configurations": [
    {
      "type": "coreclr",
      "request": "launch",
      "name": "Launch Program",
      "program": "${workspaceFolder}/bin/Debug/net8.0/TodoGrpc.dll",
      "args": [],
      "cwd": "${workspaceFolder}",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "preLaunchTask": "build"
    }
  ],
  "inputs": [
    {
      "type": "promptString",
      "id": "programPath",
      "description": "Path to your program",
      "default": "bin/Debug/net8.0/TodoGrpc.dll"
    }
  ]
}
     
 